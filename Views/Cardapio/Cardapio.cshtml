@{
    ViewData["Title"] = "Cardápio - DELICATO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/cardapio.css">

<main>
    <!-- Seção de Comidas -->
    <section class="cardapio comidas">
        <div class="card">
            <img src="~/assets/logotipocolorido.png" alt="Logo Delicato" class="logo-card" />
            <h2>Comidas</h2>

            <div class="menus-comidas">
                <div class="menu-coluna menu-espetos-trad">
                    <h3>Espetos Tradicionais</h3>
                    <ul>
                        <li>Alcatra <span>13,50</span></li>
                        <li>Costela Angus <span>15,00</span></li>
                        <li>Frango <span>11,00</span></li>
                        <li>Linguiça <span>10,00</span></li>
                        <li>Medalhão <span>12,50</span></li>
                        <li>Tilápia <span>13,00</span></li>
                    </ul>
                </div>

                <div class="menu-coluna menu-espetos-esp">
                    <h3>Espetos Especiais</h3>
                    <ul>
                        <li>Jacaré <span>28,00</span></li>
                        <li>Medalhão de Alcatra <span>20,00</span></li>
                        <li>Picanha <span>23,00</span></li>
                        <li>Coração <span>14,00</span></li>
                        <li>Costelinha BBQ <span>25,00</span></li>
                    </ul>
                </div>

                <div class="menu-coluna menu-porcoes">
                    <h3>Porções Individuais</h3>
                    <ul>
                        <li>Mini Pastel <span>25,90</span></li>
                        <li>Torresmo <span>29,90</span></li>
                        <li>Costelinha <span>37,90</span></li>
                    </ul>
                </div>

                <div class="menu-coluna menu-lanches">
                    <h3>Lanches</h3>
                    <ul>
                        <li>Mortadela Cremal <span>35,90</span></li>
                        <li>Hambúrguer Bacon <span>39,90</span></li>
                        <li>Lanche de Frango <span>34,90</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- Seção de Bebidas -->
    <section class="cardapio bebidas">
        <div class="card">
            <img src="~/assets/logotipocolorido.png" alt="Logo Delicato" class="logo-card" />
            <h2>Bebidas</h2>

            <div class="menus-bebidas">
                <!-- Coluna Esquerda -->
                <div class="coluna-esquerda">
                    <div class="menu-coluna">
                        <h3>Não Alcoólicas</h3>
                        <ul>
                            <li>Água <span>5,00</span></li>
                            <li>Refrigerante <span>8,00</span></li>
                            <li>Suco Natural <span>10,00</span></li>
                        </ul>
                    </div>

                    <div class="menu-coluna">
                        <h3>Doces</h3>
                        <ul>
                            <li>Brownie <span>8,00</span></li>
                            <li>Petit Gateau <span>12,00</span></li>
                        </ul>
                    </div>
                </div>

                <!-- Coluna Direita -->
                <div class="coluna-direita">
                    <div class="menu-coluna">
                        <h3>Cervejas</h3>
                        <ul>
                            <li>Corona <span>11,90</span></li>
                            <li>Heineken <span>11,90</span></li>
                            <li>Amstel <span>10,90</span></li>
                        </ul>
                    </div>

                    <div class="menu-coluna">
                        <h3>Drinks</h3>
                        <ul>
                            <li>Aperol <span>35,90</span></li>
                            <li>Negroni <span>36,90</span></li>
