<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Delicato Tap House</title>
    <link rel="stylesheet" href="~/css/delicato.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Modais.css"/>
    <link rel="stylesheet" href="~/css/HeaderFooterPersonalizados.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>
    <!-- HEADER -->
    <header class="header">
        <nav class="nav">
            <h1 class="logo">DELICATO</h1>

            <!-- Botão hamburguer (hidden em telas grandes) -->
            <button class="menu-toggle" id="btnMenuToggle" aria-label="Abrir menu" type="button">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </button>

            <!-- Layout original -->
            <div class="nav-menu" id="navMenu">
                <a id="btnHomeAdm" class="nav-link" asp-controller="Home" asp-action="Administrativo" style="display: none">Administrativo</a>
                <a id="btnHome" class="nav-link" asp-controller="Home" asp-action="Index">Início</a>
                <a class="nav-link" asp-controller="Cardapio" asp-action="Cardapio">Cardápio</a>
                <a class="nav-link" href="@Url.Action("Index", "Home")#sobreNos">Sobre</a>
                <a class="nav-link" id="abrirModal" style="cursor: pointer">Avaliar</a>
            </div>

            <a id="abrirModalLogin" class="btn-mreservar">Minhas<br>Reservas</a>
            <a id="abrirModalReserva" class="btn-reservar">Reservar</a>
        </nav>
    </header>


    <main>
        @RenderBody()        
    </main>
    <partial name="PartialViewModais/_ModalReserva"/>
    <partial name="PartialViewModais/_ModalAvaliacao" />
    <partial name="PartialViewModais/_ModalLogin" />
    <partial name="PartialViewModais/_ModalListaReservas" />
    
    <!-- Rodapé -->
    <footer class="footer">
        <p>
            © 2025 <span class="brand">Delicato Tap House</span>. Todos os direitos reservados.<br>
            R. José Pinto de Almeida, 399 - Alto, Piracicaba - SP, 13419-000.<br>
            Powered by <span class="brand">EEP Software.</span>
        </p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Reservas/Reservas.js"></script>
    <script src="~/js/Reservas/MinhasReservasLogin.js"></script>
    <script src="~/js/Reservas/utilitarioReservas.js"></script>
    <script src="~/js/Avaliacao/Avaliacao.js"></script>
    <script src="~/js/Avaliacao/utilitarioAvaliacao.js"></script>
    <script src="~/js/Cardapio/carrossel.js"></script>
    <script src="~/js/Cardapio/utilitarioCardapio.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
